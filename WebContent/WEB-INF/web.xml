<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>HospitalRecode</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>AdminLoginServlet</servlet-name>
    <servlet-class>com.servlet.AdminLoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddDeptServlet</servlet-name>
    <servlet-class>com.servlet.AddDeptServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddPatients</servlet-name>
    <servlet-class>com.servlet.AddPatients</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddAppointments</servlet-name>
    <servlet-class>com.servlet.AddAppointments</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddFeedbacks</servlet-name>
    <servlet-class>com.servlet.AddFeedbacks</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddDoctors</servlet-name>
    <servlet-class>com.servlet.AddDoctors</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminLoginServlet</servlet-name>
    <url-pattern>/AdminLoginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddDeptServlet</servlet-name>
    <url-pattern>/AddDeptServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddPatients</servlet-name>
    <url-pattern>/AddPatients</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddAppointments</servlet-name>
    <url-pattern>/AddAppointments</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddFeedbacks</servlet-name>
    <url-pattern>/AddFeedbacks</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddDoctors</servlet-name>
    <url-pattern>/AddDoctors</url-pattern>
  </servlet-mapping>

  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <resource-ref>
    <description>DB Connection</description>
    <res-ref-name>hr</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
</web-app>